<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#8DC6FF"
    android:orientation="vertical" >

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/header_shape"
        android:columnCount="5"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_marginRight="40dp"
            android:layout_row="0"
            android:gravity="left"
            android:paddingBottom="5dp" >

            <ImageButton
                android:id="@+id/btnRefresh"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_pressed_selector"
                android:paddingTop="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/refresh" />

            <TableLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="Prodaja za:"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >

                    <TextView
                        android:id="@+id/lblProdajaDatum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:text="18.09.2013."
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="25sp" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lblLinija"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Đir oca Roka"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="25sp" />
                </TableRow>
            </TableLayout>
        </TableRow>

        <TableLayout
            android:layout_width="317dp"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <TextView
                    android:id="@+id/lblTipKarte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:text="Datum:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblDatum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="18.09.2013."
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/lblCijenaKarte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_marginRight="10dp"
                    android:text="Blagajnik:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblBlagajnik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="Aktiva Info"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Prod. mjesto:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblProdMjesto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trogir"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />
            </TableRow>
        </TableLayout>

        <ImageButton
            android:id="@+id/btnConnect"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_column="3"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:background="@drawable/button_pressed_selector"
            android:scaleType="fitXY"
            android:src="@drawable/printer_settings_disconnected" />
        
        <ImageButton
            android:id="@+id/btnLogOut"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_column="4"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_row="0"
            android:background="@drawable/button_pressed_selector"
            android:scaleType="fitXY"
            android:src="@drawable/logout" />

        
    </GridLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|center_vertical"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#ffff"
        android:paddingLeft="10dp" >

        <ListView
            android:id="@+id/lvVoznje"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_row="1"
            android:divider="#ffffff"
            android:dividerHeight="2dp"
            android:listSelector="@drawable/selection"
            android:paddingBottom="2dp"
            android:paddingRight="15dp"
            android:paddingTop="2dp"
            tools:listitem="@android:layout/simple_list_item_1" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="0dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="200dp" >

                <ListView
                    android:id="@+id/lvKarte"
                    android:layout_width="330dp"
                    android:layout_height="fill_parent"
                    android:divider="#ffffff"
                    android:dividerHeight="2dp"
                    android:listSelector="@drawable/selection_short"
                    android:paddingRight="15dp"
                    android:paddingTop="2dp"
                    tools:listitem="@android:layout/simple_list_item_1" >
                </ListView>

                <ListView
                    android:id="@+id/lvMenus"
                    android:layout_width="370dp"
                    android:layout_height="400dp"
                    android:divider="#ffffff"
                    android:dividerHeight="2dp"
                    android:listSelector="@drawable/selection_short"
                    android:paddingRight="10dp"
                    android:paddingTop="2dp"
                    tools:listitem="@android:layout/simple_list_item_1" >
                </ListView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_span="2"
                    android:layout_weight="0"
                    android:background="@drawable/header_shape"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp" >

                    <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <TableLayout
                            android:layout_width="500dp"
                            android:layout_height="wrap_content" >

                            <TableRow
                                android:id="@+id/tableRow2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/lblCijenaMenija"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dp"
                                    android:text="Odredište:"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="20sp"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/lblSumOdrediste"
                                    android:layout_width="350dp"
                                    android:layout_height="wrap_content"
                                    android:text="Đir oca roka (15.09.2013.)"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Polazak:"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/lblSumPolazak"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="11:00"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/textView7"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Plaćanje:"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/lblSumPlacanje"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Gotovina"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:textSize="20sp" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow8"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp" >

                                <TableLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_span="2" >

                                    <TableRow
                                        android:id="@+id/tableRow9"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" >

                                        <TextView
                                            android:id="@+id/lblUplaceniIznos"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:text="Cijena (kn):"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textSize="22sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/lblSumCijena"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="0,00"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textSize="22sp" />

                                        <TextView
                                            android:id="@+id/textView8"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="5dp"
                                            android:text="Akontacija (kn):"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textSize="22sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/lblSumAkontacija"
                                            android:layout_width="100dp"
                                            android:layout_height="wrap_content"
                                            android:text="0,00"
                                            android:textAppearance="?android:attr/textAppearanceLarge"
                                            android:textSize="22sp" />
                                    </TableRow>
                                </TableLayout>
                            </TableRow>
                        </TableLayout>

                        <ImageButton
                            android:id="@+id/btnPrint"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_pressed_selector"
                            android:scaleType="fitXY"
                            android:src="@drawable/cash_register_large" />

                        <ImageButton
                            android:id="@+id/btnRezervacija"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="20dp"
                            android:background="@drawable/button_pressed_selector"
                            android:scaleType="fitXY"
                            android:src="@drawable/karta" />
                    </TableRow>
                </TableLayout>

            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>
